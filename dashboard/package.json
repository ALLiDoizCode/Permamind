{
  "name": "permamind-dashboard",
  "version": "1.0.0",
  "description": "Dashboard for Permamind hubs and registry with integrated documentation",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.1",
    "@sveltejs/kit": "^2.22.2",
    "@types/eslint": "^9.6.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^5.34.9",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.3.5"
  },
  "keywords": [
    "permamind",
    "dashboard",
    "svelte",
    "arweave",
    "decentralized",
    "ai-memory",
    "workflow",
    "documentation"
  ],
  "author": "Jonathan Green <dev.jonathan.green@gmail.com>",
  "license": "MIT"
}
