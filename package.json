{
  "name": "@permamind/skills",
  "version": "0.1.0",
  "description": "Decentralized registry for Claude Agent Skills with CLI tooling for publish, search, and install operations",
  "private": true,
  "workspaces": [
    "cli"
  ],
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "jest --watch",
    "test:once": "jest",
    "test:unit": "jest --testPathPattern=tests/unit --watch",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"lines\":100}}'",
    "test:ao": "cd ao-process && cd tests && lua run-all.lua",
    "tdd": "jest --watch --verbose",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/permamind/skills.git"
  },
  "keywords": [
    "claude",
    "agent-skills",
    "arweave",
    "ao",
    "decentralized",
    "registry",
    "cli"
  ],
  "author": "",
  "license": "MIT"
}
